<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_height="wrap_content"
        android:text="Patient"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_height="wrap_content"
        android:text="Sri Krishna"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_height="wrap_content"
        android:text="Choose appointment(s) to cancel"
        android:textSize="40sp"/>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:horizontalSpacing="@dimen/margin_10"
        android:verticalSpacing="@dimen/margin_10"
        android:numColumns="2"
        android:listSelector="@android:color/transparent"
        android:id="@+id/gvAppointments">

    </GridView>
    <Button
        android:id="@+id/btnCancelAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/confirm_number_btn"
        android:text="Cancel Appointment"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>
