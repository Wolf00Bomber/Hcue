<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llEmail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edtEnterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:hint="Enter Email"
            android:imeOptions="actionNext"
            android:maxLength="30"
            android:minEms="10"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edtDomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:ems="10"
            android:hint="domain"
            android:imeOptions="actionNext"
            android:maxLength="30"
            android:minEms="10"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="25sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/quickappointment_btn"
        android:gravity="center"
        android:text="Confirm Email ID"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNoMailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/dont_have_num_btn"
        android:gravity="center"
        android:text="I don&apos;t have a email id"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />



</LinearLayout>