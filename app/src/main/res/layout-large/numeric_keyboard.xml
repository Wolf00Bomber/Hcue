<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:orientation="horizontal"
        android:background="@drawable/number_pad_bg"
        android:visibility="visible" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="1"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="2"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="3"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="4"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="5"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="6"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="7"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="8"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="9"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="0"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/clear_back_icon"
            android:onClick="keyboardClick"
            android:text="DEL"
            android:textColor="@android:color/transparent"
             />
</LinearLayout>