<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:background="@drawable/number_pad_bg"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:visibility="visible" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/clear_back_icon"
            android:onClick="keyboardClick"
            android:padding="0dp"
            android:text="DEL"
            android:textColor="@android:color/transparent"
             />
</LinearLayout>