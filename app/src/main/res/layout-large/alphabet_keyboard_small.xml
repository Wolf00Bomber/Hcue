            android:onClick="keyboardClick"
            
            android:text="h"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="j"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="k"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="l"
            android:textSize="@dimen/test_size_26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        >



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="z"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="x"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="c"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="v"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="b"
            android:textSize="@dimen/test_size_26" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            
            android:text="n"
            android:textSize="@dimen/test_size_26" />

