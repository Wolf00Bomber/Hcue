<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSpecialKeyBoard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/key_board_bg"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/number_keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/clear_back_icon"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="DEL"
            android:textColor="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="ABC"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="."
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="'"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="@string/question"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="_"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text=":"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text=";"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="#"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/space_bar_key_icon"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="SPACE"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"

            android:text="$"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="&amp;"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="*"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="@string/at"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard"
            android:onClick="keyboardClick"
            android:padding="5dp"
            android:text="+"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>