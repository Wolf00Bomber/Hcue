<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlTab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/doctor"
    android:padding="5dp">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        app:siShape="@drawable/rounded_rect_shape"
        android:src="@drawable/profile_doctor_bg_male"
        app:siSquare="true"/>

    <!--<com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/profile_doctor_bg_male"
        />-->
    <!--<ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/doctor_img_bg" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@+id/imageView"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDoctorName"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Dr.P.Venkatakrishna" />

<!--        <TextView
            android:id="@+id/tvDesignation"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#646464"
            android:text="BPT" />-->
        
        <TextView
            android:id="@+id/tvSpecality"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#646464"
            android:lines="2"
            android:singleLine="false"
            android:text="Physiotherapist" />
        <TextView
            android:id="@+id/tvStatus"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:gravity="center|right"
            android:text="Available" />
    </LinearLayout>

</RelativeLayout>